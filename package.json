{
  "name": "universal-dev-mcp-server",
  "version": "2.0.0",
  "description": "Universal Development MCP Server with 98% token savings for all programming languages",
  "main": "dist/main.js",
  "type": "module",
  "bin": {
    "universal-dev-mcp-server": "dist/main.js",
    "universal-dev-mcp": "dist/main.js",
    "xcode-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/main.js && chmod +x dist/index.js",
    "start": "node dist/main.js",
    "start:legacy": "node dist/index.js",
    "dev": "tsx src/main.ts",
    "dev:legacy": "tsx src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "universal",
    "development",
    "javascript",
    "typescript",
    "python",
    "java",
    "go",
    "rust",
    "xcode",
    "ios",
    "macos",
    "swift",
    "claude",
    "ai",
    "optimization",
    "token-savings",
    "multi-language"
  ],
  "author": "Universal MCP Server Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PawelKrzywdzinski/mcp-for-code.git"
  },
  "bugs": {
    "url": "https://github.com/PawelKrzywdzinski/mcp-for-code/issues"
  },
  "homepage": "https://github.com/PawelKrzywdzinski/mcp-for-code#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/glob": "^8.1.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "xml2js": "^0.6.2",
    "yaml": "^2.3.4",
    "@iarna/toml": "^2.2.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "install.sh"
  ]
